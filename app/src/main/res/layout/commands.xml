<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/imageViewItem"
        android:src="@drawable/intel_edison_board"/>
    <TextView
        android:id="@+id/modelName"
        android:text="model name"
        android:layout_alignTop="@+id/imageViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/batteryStatus"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageViewItem"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <TextView
        android:id="@+id/cores"
        android:text="0 cores"
        android:layout_below="@+id/modelName"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/imageViewItem"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/cacheSize"
        android:text="0 KB Cache"
        android:layout_below="@+id/modelName"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/cores"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/batteryStatus"
        android:src="@drawable/ic_action_device_battery_20"
        android:layout_alignBottom="@+id/modelName"
        android:layout_toLeftOf="@+id/deviceStatusIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/deviceStatusIcon"
        android:src="@drawable/ic_bluetooth_disabled"
        android:layout_alignBottom="@+id/modelName"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/status"
        android:text="@string/none"
        android:layout_below="@+id/deviceStatusIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/holo_blue_light"/>

    <ListView
        android:id="@+id/listView"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btnExecAll"
        android:text="@string/execute_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"/>
</LinearLayout>